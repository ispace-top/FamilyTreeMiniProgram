/* pages/search/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f8fa;
}

/* --- 自定义导航栏 (美化) --- */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #4A90E2;
  /* 纯白背景 */
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.nav-title-wrapper {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  transition: background-color 0.2s;
}

.nav-title-wrapper:active {
  background-color: #f0f0f0;
}

.nav-title {
  font-size: 34rpx;
  /* 适中字号 */
  font-weight: 600;
  color: rgb(255, 255, 255);
}

.search-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  border-radius: 30rpx;
  margin-top: 15rpx;
  padding: 12rpx 20rpx;
  border: 2rpx solid rgba(146, 146, 146, 0.425);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.search-input {
  font-size: 28rpx;
}


.cancel-btn::after {
  display: none;
}

.results-container {
  flex-grow: 1;
  height: 100%;
}

.status-view {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 200rpx;
  color: #999;
}

.results-list {
  background-color: #fff;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.result-item:last-child {
  border-bottom: none;
}

.item-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-avatar.male {
  background-color: #e8f0fe;
}

.item-avatar.female {
  background-color: #fff8eb;
}

.item-avatar.male::after {
  content: '♂';
  color: #4A90E2;
  font-size: 40rpx;
}

.item-avatar.female::after {
  content: '♀';
  color: #F5A623;
  font-size: 40rpx;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.item-desc {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}
