/* pages/family-intro/index.wxss */
.container {
  padding: 32rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.status-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 200rpx;
  color: #999;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}
.edit-btn {
  background-color: #4A90E2;
  color: white;
}

.content-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
}
.label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}
.desc {
  font-size: 30rpx;
  color: #666;
}
.intro-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap; /* 保留换行符 */
}
.textarea {
  width: 100%;
  height: 500rpx;
  font-size: 30rpx;
  line-height: 1.8;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  margin-top: 40rpx;
}
.cancel-btn {
  flex: 1;
  background-color: #f0f0f0;
  color: #666;
  margin-right: 15rpx;
}
.save-btn {
  flex: 1;
  background-color: #28a745;
  color: white;
  margin-left: 15rpx;
}
