.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #999;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.name-gender {
  display: flex;
  align-items: flex-end;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
}

.gender {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
  color: white;
}

.gender.male {
  background-color: #4A90E2;
}

.gender.female {
  background-color: #ff7b7b;
}

.edit-btn {
  background-color: #7b9cc242;
  border: 2rpx solid #4A90E2;
  border-radius: 5rpx;
  padding: 5rpx;
  right: 10rpx;
  color: #4A90E2;
}

.save-btn {
  background-color: #28a745;
  border: 2rpx solid white;
  border-radius: 5rpx;
  padding: 5rpx;
  right: 10rpx;
  color: white;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  min-height: 42rpx;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #888;
}

.value {
  color: #333;
  text-align: right;
}

.value.link {
  color: #4A90E2;
  text-decoration: underline;
}

.value > .value.link:not(:last-child)::after{
  border-bottom: none;
  color: #000;
  content: "、";
  text-decoration: none !important;
}

.relation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.relation-title {
  font-size: 32rpx;
  font-weight: bold;
}

.add-relation-btn {
  background-color: #e8f0fe;
  color: #4A90E2;
  font-size: 22rpx !important;
  padding: 5rpx 10rpx !important;
  border: 1rpx solid #4A90E2;
}

.name-input {
  font-size: 40rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #4A90E2;
}

.value-input {
  max-width: 70%;
  color: #333;
}

.picker-value {
  color: #333;
}


.picker-value::after {
  content: ' >';
  color: #ccc;
  font-weight: bold;
}

.cancel-btn {
  margin-top: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

/* --- 身份认领卡片样式 --- */
.claim-card {
  padding: 32rpx;
  text-align: center;
  border: 2rpx dashed #4A90E2;
  background-color: #e8f0fe;
}

.claim-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.claim-btn {
  background-color: #28a745;
  color: white;
  width: 60%;
}

/* --- 弹窗通用样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background-color: white;
  width: 85%;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-input {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: auto;
}

.modal-confirm-btn {
  background-color: #4A90E2;
  color: white;
  margin-top: 20rpx;
}

.radio-group {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.radio {
  margin: 0 30rpx;
  font-size: 30rpx;
}

.search-results {
  max-height: 200rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-item:last-child {
  border-bottom: none;
}

.result-birth {
  font-size: 24rpx;
  color: #999;
}

.divider {
  text-align: center;
  color: #aaa;
  margin: 10rpx 0;
}

.create-new-tip {
  text-align: center;
  font-size: 26rpx;
  color: #888;
  margin-bottom: 20rpx;
}

/* --- 新增：已绑定标识样式 --- */
.linked-tag {
  background-color: #e8f4ff;
  color: #1989fa;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 12rpx;
  font-weight: normal;
  vertical-align: middle;
}