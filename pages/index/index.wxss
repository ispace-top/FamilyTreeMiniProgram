/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.search-input {
  flex-grow: 1;
  background-color: #f7f7f7;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.invite-btn {
  margin-left: 20rpx;
  background-color: #4A90E2;
  color: white;
}

.tree-scroll-view {
  flex-grow: 1;
  width: 100%;
  height: 100%;
  background-color: #F7F8FA;
  white-space: nowrap; /* 关键：让内容横向不换行 */
}

.tree-container {
  display: inline-block; /* 关键：让容器宽度由内容撑开 */
  padding: 80rpx;
  min-width: 100%;
  box-sizing: border-box;
  text-align: center;
}

/* --- 高亮样式 --- */
.member-card.highlight {
  border-color: #F5A623; /* 使用醒目的橙色边框 */
  box-shadow: 0 0 24rpx rgba(245, 166, 35, 0.8); /* 添加光晕效果 */
  transform: scale(1.05); /* 轻微放大，突出显示 */
  transition: all 0.3s ease;
}