/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  background-color: #F7F8FA;
}

/* --- 状态容器 --- */
.status-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  width: 100%;
  height: 100%;
}
.loading-text { font-size: 28rpx; }
.empty-text { font-size: 32rpx; color: #888; }
.empty-tip { font-size: 26rpx; color: #aaa; margin-top: 16rpx; }
.create-btn {
  margin-top: 40rpx;
  background-color: #4A90E2;
  color: white;
  width: 50%;
}

/* --- 新增：家族形象展示区 --- */
.family-profile {
  position: relative;
  height: 350rpx;
  background-color: #ddd;
}
.family-banner {
  width: 100%;
  height: 100%;
}
.family-avatar {
  position: absolute;
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  background-color: #fff;
}
.family-name-display {
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* --- 搜索栏样式 --- */
.search-wrapper {
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.search-fake-input {
  background-color: #f7f7f7;
  border-radius: 30rpx;
  padding: 12rpx 24rpx;
  display: flex;
  align-items: center;
  color: #aaa;
}
.search-icon {
  margin-right: 10rpx;
}
.search-placeholder {
  font-size: 28rpx;
}

/* --- 树容器 --- */
.tree-scroll-view {
  flex-grow: 1;
  width: 100%;
  /* 为底部导航栏留出空间 */
  padding-bottom: 120rpx; 
  box-sizing: border-box;
  height: 100%; /* 确保在某些机型上能正确计算高度 */
}
.tree-container {
  display: inline-block;
  padding: 80rpx;
  min-width: 100%;
  box-sizing: border-box;
  text-align: center;
}

/* --- 新增：底部导航栏样式 --- */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom); /* 适配iPhone X等机型 */
}
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}
.nav-icon {
  font-size: 48rpx;
  margin-bottom: 4rpx;
}

/* --- 弹窗通用样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}
.modal-content {
  background-color: white;
  width: 80%;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}
.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.modal-input, .modal-textarea {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: auto;
}
.modal-textarea {
  height: 120rpx;
}
.modal-confirm-btn {
  background-color: #4A90E2;
  color: white;
  margin-top: 20rpx;
}
.radio-group {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.radio {
  margin: 0 30rpx;
  font-size: 30rpx;
}
