/* pages/join/index.wxss */
.container {
  padding: 40rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

/* --- 状态 --- */
.status-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  color: #999;
}
.error-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fdecec;
  color: #f56c6c;
  font-size: 80rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}
.error-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}
.back-home-btn {
  background-color: #4A90E2;
  color: white;
  width: 50%;
}

/* --- 卡片 --- */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  text-align: center;
}
.inviter-info {
  font-size: 30rpx;
  color: #666;
}
.inviter-name {
  font-weight: bold;
  color: #333;
}
.family-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-top: 20rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.form-input {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: auto;
  text-align: left;
}
.radio-group {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.radio {
  margin: 0 30rpx;
  font-size: 30rpx;
}
.join-btn {
  background-color: #28a745;
  color: white;
  margin-top: 20rpx;
}
