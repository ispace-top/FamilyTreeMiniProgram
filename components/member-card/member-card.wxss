/* components/member-card/member-card.wxss */
.member-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 0 20rpx;
}

.couple-container {
  display: flex;
  align-items: flex-start;
}

.card-wrapper {
  position: relative;
  padding-bottom: 20rpx; /* 为折叠按钮留出空间 */
}

.member-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  border: 2rpx solid;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  background-color: #fff;
  transition: all 0.3s ease;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  background-size: cover;
  position: relative; /* 为添加伪元素做准备 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
}

/* --- 按性别和状态区分样式 --- */
.member-card.male { border-color: #4A90E2; }
.member-card.female { border-color: #F5A623; }
.avatar.male { background-color: #e8f0fe; }
.avatar.female { background-color: #fff8eb; }

/* 使用伪元素制作性别符号 */
.avatar.male::after {
  content: '♂';
  color: #4A90E2;
  font-size: 36rpx;
  font-weight: bold;
}
.avatar.female::after {
  content: '♀';
  color: #F5A623;
  font-size: 36rpx;
  font-weight: bold;
}

.member-card.deceased { 
  border-color: #9B9B9B; 
  background-color: #f2f2f2; 
  color: #9B9B9B;
}
.avatar.deceased { 
  background-color: #e0e0e0;
  filter: grayscale(100%);
}
.avatar.deceased::after {
  color: #9B9B9B;
}

/* 折叠按钮 */
.toggle-btn {
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 40rpx;
  background-color: white;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
  z-index: 10;
  cursor: pointer;
}

/* 配偶 */
.spouse-card-wrapper {
  display: flex;
  align-items: center;
  /* 移除固定的margin-left，让连接线控制间距 */
}

/* --- 连接线 --- */
.connector-spouse {
  width: 40rpx;
  height: 2rpx;
  background-color: #ccc;
}
.children-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding-top: 60rpx;
}
.connector-down {
  width: 2rpx;
  height: 60rpx;
  background-color: #ccc;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}
.children-nodes {
  display: flex;
  justify-content: center;
}
.child-node {
  position: relative;
}
/* 每个子女都有一条向上的垂直线 */
.child-node::before {
  content: '';
  position: absolute;
  top: -60rpx;
  left: 50%;
  width: 2rpx;
  height: 60rpx;
  background-color: #ccc;
}
/* 水平连接线：第一个孩子，从中心向右 */
.children-nodes .child-node:first-child::after {
  content: '';
  position: absolute;
  top: -60rpx;
  height: 2rpx;
  background-color: #ccc;
  width: 50%;
  left: 50%;
}
/* 水平连接线：最后一个孩子，从中心向左 */
.children-nodes .child-node:last-child::after {
  content: '';
  position: absolute;
  top: -60rpx;
  height: 2rpx;
  background-color: #ccc;
  width: 50%;
  right: 50%;
}
/* 水平连接线：中间的孩子，贯穿左右 */
.children-nodes .child-node:not(:first-child):not(:last-child)::after {
  content: '';
  position: absolute;
  top: -60rpx;
  left: 0;
  right: 0;
  height: 2rpx;
  background-color: #ccc;
}

/* 新增：修复只有一个孩子时的连线问题 */
.children-nodes .child-node:only-child::after {
  display: none; /* 如果是唯一的孩子，不显示水平线 */
}
