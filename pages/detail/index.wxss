/* pages/detail/index.wxss */
.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #999;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.info-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}
.name-gender {
    display: flex;
    align-items: center;
}
.name {
    font-size: 40rpx;
    font-weight: bold;
}
.gender {
    font-size: 24rpx;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    margin-left: 16rpx;
    color: white;
}
.gender.male { background-color: #4A90E2; }
.gender.female { background-color: #F5A623; }
.edit-btn {
    background-color: #4A90E2;
    color: white;
}
.save-btn {
    background-color: #28a745;
    color: white;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  min-height: 42rpx;
}
.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #888;
}

.value {
  color: #333;
  text-align: right;
  max-width: 70%;
}
.value.link {
  color: #4A90E2;
  text-decoration: underline;
}

.relation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.relation-title {
  font-size: 32rpx;
  font-weight: bold;
}
.add-relation-btn {
  background-color: #e8f0fe;
  color: #4A90E2;
  border: 1rpx solid #4A90E2;
}

/* --- 编辑模式下的样式 --- */
.name-input {
  font-size: 40rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #4A90E2;
}
.value-input {
  text-align: right;
  color: #333;
  width: 70%;
}
.picker-value {
  color: #333;
}
.picker-value::after {
    content: ' >';
    color: #ccc;
    font-weight: bold;
}
.cancel-btn {
  margin-top: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

/* --- 弹窗通用样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}
.modal-content {
  background-color: white;
  width: 85%;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}
.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.modal-input {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  width: auto;
}
.modal-confirm-btn {
  background-color: #4A90E2;
  color: white;
  margin-top: 20rpx;
}
.radio-group {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.radio {
  margin: 0 30rpx;
  font-size: 30rpx;
}

/* --- 配偶弹窗特定样式 --- */
.search-results {
  max-height: 200rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.result-item:last-child {
  border-bottom: none;
}
.result-birth {
  font-size: 24rpx;
  color: #999;
}
.divider {
  text-align: center;
  color: #aaa;
  margin: 10rpx 0;
}
.create-new-tip {
  text-align: center;
  font-size: 26rpx;
  color: #888;
  margin-bottom: 20rpx;
}
